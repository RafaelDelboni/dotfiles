[colors]
background = #191919
background-alt = #444
foreground = #fff
foreground-alt = #868686
primary = #C75646
secondary = #FFF
alert = #E09690

[bar/example]
monitor = ${env:MONITOR:}
width = 100%
height = 20
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

dim-value = 0.0

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = fixed:pixelsize=10;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = "SauceCodePro Nerd Font:style=Light:pixelsize=12;3"

modules-left = i3 xwindow
modules-center = 
modules-right = volume xkeyboard battery nm date powermenu

tray-position = right
tray-padding = 2
tray-transparent = false
tray-background = ${colors.background}

;wm-restack = i3
;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
